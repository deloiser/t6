---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter.title + ' - WPCodeBox Playground'} description={frontmatter.description}>
  <Header />
  <main>
    <article class="page">
      <div class="container">
        <div class="page-header">
          <h1 class="page-title">{frontmatter.title}</h1>
        </div>
        
        <div class="page-content">
          <slot />
        </div>
      </div>
    </article>
  </main>
  <Footer />
  <style>
    .page {
      padding: var(--spacing-xl) 0 var(--spacing-2xl);
    }

    .page-header {
      max-width: 800px;
      margin: 0 auto var(--spacing-2xl);
      padding-bottom: var(--spacing-xl);
      border-bottom: 2px solid var(--color-border);
    }

    .page-title {
      font-size: 3rem;
      margin-bottom: 0;
      line-height: 1.1;
    }

    .page-content {
      max-width: 800px;
      margin: 0 auto;
    }

    .page-content :global(h2) {
      margin-top: var(--spacing-2xl);
      padding-top: var(--spacing-lg);
      border-top: 1px solid var(--color-border);
    }

    .page-content :global(h3) {
      margin-top: var(--spacing-xl);
    }

    .page-content :global(p) {
      font-size: 1.125rem;
      line-height: 1.8;
      color: var(--color-text);
    }

    .page-content :global(ul), .page-content :global(ol) {
      font-size: 1.0625rem;
      line-height: 1.8;
    }

    .page-content :global(blockquote) {
      font-size: 1.125rem;
      padding-left: var(--spacing-xl);
      margin: var(--spacing-xl) 0;
    }

    .page-content :global(img) {
      margin: var(--spacing-xl) 0;
      box-shadow: var(--shadow-md);
    }

    @media (max-width: 767px) {
      .page-title {
        font-size: 2rem;
      }

      .page-content :global(p) {
        font-size: 1rem;
      }
    }
  </style>
</BaseLayout>
